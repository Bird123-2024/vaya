{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["ES2021", "DOM"],
    "target": "ES2021",
    "module": "nodenext",
    "outDir": "dist",
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.mts"],
  "exclude": ["node_modules"]
}
